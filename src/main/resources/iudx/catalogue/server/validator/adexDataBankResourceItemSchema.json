{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/databank-resource-metadata.schema.json",
  "type": "object",
  "title": "Data Bank Resource Metadata Schema",
  "description": "The root schema comprises the entire JSON document",
  "default": {},
  "examples": [
    {
      "name": "subdistrict-weather-info",
      "type": [
        "adex:DataBank"
      ],
      "label": "SomeLabel",
      "description": "SomeDescription",
      "shortDescription" : "a short description about the item",
      "tags": ["environment", "weather", "rainfall", "temperature"],
      "accessPolicy": "RESTRICTED",
      "organizationType": "Private",
      "fileFormat": "xlsx",
      "industry": "Climate Research",
      "uploadedBy": "john.doe@datakaveri.org",
      "geoCoverage": "Pan India",
      "yearRange": "2015-2023",
      "verifiedBy": "Ministry of Earth Sciences",
      "uploadFrequency": "Weekly",
      "license": "CC-BY 4.0",
      "department": "Department of IT, Electronics and Communication"
    }
  ],
  "required": [
    "name",
    "type",
    "label",
    "shortDescription",
    "description",
    "tags",
    "accessPolicy",
    "organizationType",
    "organizationId",
    "fileFormat",
    "department",
    "industry",
    "uploadedBy",
    "geoCoverage",
    "yearRange",
    "verifiedBy",
    "mediaURL",
    "uploadFrequency",
    "license"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The name schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": ["SomePlace"],
      "maxLength": 512,
      "pattern": "^[a-zA-Z0-9]([\\w-]*[a-zA-Z0-9 ])?$"
    },
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The id schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": [
        "8b95ab80-2aaf-4636-a65e-7f2563d0d371"
      ],
      "maxLength": 36,
      "pattern": "^[a-zA-Z0-9]{8}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{12}$"
    },
    "type": {
      "$id": "#/properties/type",
      "type": "array",
      "title": "The type schema",
      "description": "An explanation about the purpose of this instance.",
      "default": [],
      "examples": [
        [
          "adex:DataBank"
        ]
      ],
      "additionalItems": true,
      "items": {
        "$id": "#/properties/type/items",
        "anyOf": [
          {
            "$id": "#/properties/type/items/anyOf/0",
            "type": "string",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
              "adex:DataBank"
            ]
          }
        ]
      }
    },
    "tags": {
      "$id": "#/properties/tags",
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "The tags schema",
      "description": "An explanation about the purpose of this instance.",
      "default": ""
    },
    "accessPolicy": {
      "$id": "#/properties/accessPolicy",
      "type": "string",
      "title": "The access policy schema",
      "default": "",
      "examples": ["RESTRICTED", "PRIVATE"],
      "pattern": "^(RESTRICTED|OPEN|PRIVATE)$"
    },
    "label": {
      "type": "string",
      "title": "The label schema",
      "maxLength": 512
    },
    "description": {
      "type": "string",
      "title": "The description schema",
      "maxLength": 4000
    },
    "organizationId": {
      "$id": "#/properties/organizationId",
      "type": "string",
      "title": "The organizationId schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "examples": [
        "8b95ab80-2aaf-4636-a65e-7f2563d0d351"
      ],
      "maxLength": 36,
      "pattern": "^[a-zA-Z0-9]{8}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{12}$"
    },
    "organizationType": {
      "type": "string",
      "title": "The organizationType schema",
      "enum": ["Private", "Public", "Academic Institution", "NGO/Non-profit", "Other", "NA", ""]
    },
    "shortDescription": {
      "type": "string",
      "title": "",
      "maxLength": 512
    },
    "industry" : {
      "type": "string",
      "title": ""
    },
    "uploadedBy": {
      "type": "string",
      "title": ""
    },
    "geoCoverage": {
      "type": "string",
      "title": ""
    },
    "yearRange": {
      "type": "string",
      "title": ""
    },
    "verifiedBy": {
      "type": "string",
      "title": ""
    },
    "uploadFrequency": {
      "type": "string",
      "title": ""
    },
    "license": {
      "type": "string",
      "title": ""
    },
    "fileFormat": {
      "type": "string",
      "title": "The fileFormat schema"
    },
    "department": {
      "type": "string",
      "title": "The department schema"
    },
    "itemStatus": {
      "type": "string",
      "enum": ["ACTIVE", "INACTIVE"]
    },
    "itemCreatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "@context": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": true
}