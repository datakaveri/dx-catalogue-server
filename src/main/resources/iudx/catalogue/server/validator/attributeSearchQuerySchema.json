{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Term Search Schema",
  "type": "object",
  "required": ["field", "searchType", "values"],
  "properties": {
    "field": { "type": "string" },
    "searchType": { "const": "term" },
    "values": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]([\\w\\-.,:/()& ]*[a-zA-Z0-9])?$"
      }
    }
  },
  "additionalProperties": false
}
